{
  "permissions": {
    "allow": [
      "Bash(npm test:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run format:*)",
      "Bash(npm run typecheck:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(vercel:*)",
      "Bash(tree:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:supabase.com)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Edit(.env)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const f=JSON.parse(require('fs').readFileSync('/dev/stdin','utf8')).tool_input?.file_path; if(f && (f.endsWith('.ts')||f.endsWith('.tsx')||f.endsWith('.js'))) require('child_process').execSync('npx prettier --write '+f);\""
          }
        ]
      }
    ]
  }
}
