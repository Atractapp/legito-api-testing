{
  "name": "legito-api-tests",
  "version": "2.0.0",
  "description": "Comprehensive API test automation framework for Legito REST API v7",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:smoke": "vitest run tests/smoke --reporter=verbose",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=junit --reporter=json --outputFile=reports/results.json",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "report": "vitest --reporter=html",
    "report:generate": "tsx scripts/generate-report.ts",
    "report:upload": "tsx scripts/upload-report.ts",
    "report:playwright": "playwright show-report",
    "lint": "eslint src tests config --ext .ts",
    "lint:fix": "eslint src tests config --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"config/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"config/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "clean": "rimraf reports/* playwright-report test-results dist",
    "cleanup:test-data": "tsx scripts/cleanup-test-data.ts",
    "setup:supabase": "tsx scripts/setup-supabase-schema.ts",
    "pretest": "npm run typecheck"
  },
  "keywords": [
    "api-testing",
    "vitest",
    "playwright",
    "test-automation",
    "legito",
    "typescript",
    "supabase"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "artillery": "^2.0.3",
    "dotenv": "^16.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.0.0",
    "open-cli": "^8.0.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.5",
    "date-fns": "^3.2.0",
    "form-data": "^4.0.0",
    "joi": "^17.12.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
