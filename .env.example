# API Testing Platform - Environment Variables Template
# Copy this file to .env.local and fill in with your actual values
# NEVER commit .env.local to version control

# ========================================
# Supabase Configuration
# ========================================

# Public Supabase credentials (safe to expose)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Private Supabase credentials (API routes only)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_DB_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# ========================================
# Application Configuration
# ========================================

# Environment type
NEXT_PUBLIC_ENVIRONMENT=development
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
API_TIMEOUT_MS=30000

# Application Version
NEXT_PUBLIC_VERSION=1.0.0

# ========================================
# Authentication
# ========================================

# Session configuration
SESSION_MAX_AGE=2592000  # 30 days in seconds
REFRESH_TOKEN_EXPIRY=604800  # 7 days in seconds

# ========================================
# Database Configuration
# ========================================

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=10000

# Query timeouts
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=60000

# ========================================
# Monitoring and Logging
# ========================================

# Sentry (Error Tracking)
SENTRY_DSN=https://[key]@[domain].ingest.sentry.io/[projectId]
SENTRY_ENVIRONMENT=development
SENTRY_DEBUG=false

# Datadog (APM and Monitoring)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_SITE=datadoghq.com
DD_SERVICE=api-testing-platform
DD_ENV=development
DD_TRACE_SAMPLE_RATE=0.1

# Log Level
LOG_LEVEL=info

# ========================================
# Email Configuration
# ========================================

# SMTP Server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email settings
EMAIL_FROM=noreply@api-testing.example.com
ALERT_EMAIL=alerts@yourcompany.com
NOTIFICATION_EMAIL=notifications@yourcompany.com

# ========================================
# Slack Integration
# ========================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#api-testing
SLACK_BOT_TOKEN=xoxb-your-bot-token

# ========================================
# GitHub Integration
# ========================================

GITHUB_TOKEN=ghp_your-github-token
GITHUB_OWNER=your-org
GITHUB_REPO=your-repo

# ========================================
# Vercel Configuration
# ========================================

VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_TOKEN=your-vercel-token

# ========================================
# Test Execution Configuration
# ========================================

# Test timeout settings
TEST_TIMEOUT_MS=30000
TEST_EXECUTION_TIMEOUT_MS=600000  # 10 minutes

# Test runner configuration
PARALLEL_TEST_JOBS=5
TEST_RETRY_COUNT=2
TEST_RETRY_DELAY_MS=1000

# ========================================
# Security Configuration
# ========================================

# CORS settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=false  # Enable only in production

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# ========================================
# Feature Flags
# ========================================

FEATURE_REAL_TIME_UPDATES=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_WEBHOOK_DELIVERY=true
FEATURE_SCHEDULED_RUNS=true

# ========================================
# Development Tools
# ========================================

# Next.js configuration
NEXT_TELEMETRY_DISABLED=1

# Debug mode
DEBUG=false
VERBOSE_LOGGING=false

# ========================================
# Analytics Configuration
# ========================================

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID=UA-XXXXX-Y

# Mixpanel (Optional)
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# ========================================
# Third-party Services
# ========================================

# PagerDuty (Optional)
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_ID=your-service-id

# ========================================
# Cache Configuration
# ========================================

CACHE_TTL_SECONDS=3600
REDIS_URL=redis://localhost:6379  # Optional

# ========================================
# File Storage (Supabase Storage)
# ========================================

STORAGE_BUCKET_NAME=test-results
STORAGE_MAX_FILE_SIZE=52428800  # 50MB

# ========================================
# Compliance and Legal
# ========================================

GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
AUTOMATIC_BACKUP_ENABLED=true
