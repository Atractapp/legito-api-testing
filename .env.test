# API Configuration
API_BASE_URL=https://api-test.legito.com
API_VERSION=v1

# Authentication
AUTH_USERNAME=test@example.com
AUTH_PASSWORD=your_secure_password

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Test Configuration
TEST_ENV=test
LOG_LEVEL=info
LOG_DIR=logs

# Timeouts (milliseconds)
DEFAULT_TIMEOUT=30000
RETRY_TIMEOUT=5000

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1000

# Performance Testing
PERFORMANCE_DURATION=300
PERFORMANCE_VUS=20

# Feature Flags
IGNORE_HTTPS_ERRORS=false
ENABLE_REQUEST_LOGGING=true
ENABLE_SCREENSHOT_ON_FAILURE=true

# CI/CD
CI=false

# Optional: Template Testing
TEST_TEMPLATE_ID=test-template-1

# Optional: Webhook URLs for notifications
SLACK_WEBHOOK=
